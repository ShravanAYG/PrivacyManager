{
    "manifest_version": 3,
    "name": "Email Field Detector",
    "version": "1.0",
    "description": "Detect email input fields and auto-fill from backend",
    "permissions": [
      "activeTab",
      "storage",
      "http://localhost:5000/"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }